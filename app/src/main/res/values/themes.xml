<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BaatCheet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Normal theme things here -->

        <!-- These are safe for all APIs -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- These attributes only exist in API 31+ -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/ic_logo</item>
    </style>
</resources>
